@charset "UTF-8";
.container {
  padding-bottom: 140rpx;
  /* 空白页 */
}
.container .empty {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #fff;
}
.container .empty .empty-tips {
  display: flex;
  font-size: 14px;
  color: #909193;
}
.container .empty .empty-tips .navigator {
  color: #fa436a;
  margin-left: 10rpx;
}
/* 购物车列表项 */
.cart-item {
  display: flex;
  align-items: center;
  position: relative;
  padding: 20rpx;
  margin: 0 0 10rpx;
  background-color: #fff;
}
.cart-item:last-child {
  margin-bottom: 0;
}
.cart-item .rightContent {
  display: flex;
  flex: 1;
}
.cart-item .image-wrapper {
  width: 230rpx;
  height: 230rpx;
  flex-shrink: 0;
  position: relative;
}
.cart-item .item-right {
  display: flex;
  flex-direction: column;
  flex: 1;
  width: 0;
  overflow: hidden;
  position: relative;
  padding-left: 30rpx;
}
.cart-item .item-right .title,
.cart-item .item-right .price {
  font-size: 14px;
  line-height: 40rpx;
}
.cart-item .item-right .attr {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 12px;
  color: #909193;
}
.cart-item .item-right .price {
  height: 50rpx;
  line-height: 50rpx;
  color: #fa436a;
}
.cart-item .item-right .originPrice {
  margin-left: 10rpx;
  text-decoration: line-through;
  color: #c0c4cc;
}
.cart-item .del-btn {
  padding: 4rpx 10rpx;
  font-size: 34rpx;
  height: 50rpx;
}
/* 底部栏 */
.action-section {
  position: fixed;
  left: 50%;
  bottom: 20rpx;
  z-index: 95;
  display: flex;
  align-items: center;
  width: 700rpx;
  height: 100rpx;
  -webkit-transform: translateX(-50%);
          transform: translateX(-50%);
  padding: 0 30rpx;
  background: rgba(255, 255, 255, 0.9);
  box-shadow: 0 0 20rpx 0 rgba(0, 0, 0, 0.5);
  border-radius: 16rpx;
}
.action-section .checkbox {
  height: 52rpx;
  position: relative;
}
.action-section .checkbox image {
  width: 52rpx;
  height: 100%;
  position: relative;
  z-index: 5;
}
.action-section .clear-btn {
  position: absolute;
  left: 26rpx;
  top: 0;
  z-index: 4;
  width: 0;
  height: 26px;
  line-height: 26px;
  padding-left: 38rpx;
  color: #fff;
  background: #c8c9cc;
  border-radius: 0 50px 50px 0;
  opacity: 0;
  transition: .2s;
}
.action-section .clear-btn.show {
  opacity: 1;
  width: 120rpx;
}
.action-section .total-box {
  flex: 1;
  display: flex;
  flex-direction: column;
  text-align: right;
  padding-right: 40rpx;
}
.action-section .total-box .price {
  color: #fa436a;
  font-weight: bold;
}
.action-section .total-box .coupon {
  color: #fa436a;
}
.action-section .confirm-btn {
  width: auto;
  border: none;
  padding: 0 38rpx;
  margin: 0;
  border-radius: 100px;
  height: 76rpx;
  line-height: 76rpx;
  background-color: #fa436a;
  color: #fff;
  box-shadow: 1px 2px 5px rgba(217, 60, 93, 0.72);
}

